---
import Podcast from "../components/Podcast.astro";
import Main from "../layouts/main.astro";

---


<Main>
    <section class="heading-contacts py-10 md:py-40 relative bg-[#00000090]">
        <div class="md:w-4/5 mx-auto px-10 md:px-0 md:flex justify-between">

            <div class="md:w-3/5 mx-auto flex flex-col justify-center item-start">
                <h2 class="text-4xl text-center font-semibold text-white uppercase">Get in touch with DAP</h2>
                <p class="text-xl text-center text-gray-300 leading-8 py-3">For consultations, enquiries, engagement and solicitation</p>
            </div>
        </div>
  
    </section>

    <section class="py-10 md:py-40 relative">
        <div class="md:w-3/5 mx-auto">     
            <div class="md:flex gap-x-4 my-8">
                
                <div class="md:w-1/3 p-4 text-center flex flex-col items-center">
                    <img src="/images/cellphone-icon.png" alt="" class="h-[40px]">
                    <p class="text-lg font-semibold pt-4">+234 (0) 812345678</p>
                </div>
                <div class="md:w-1/3 p-4 text-center flex flex-col items-center">
                    <img src="/images/email-icon.png" alt="" class="h-[40px]">
                    <p class="text-lg font-semibold pt-4">
                        <a href="mailto://hello@dakukupeterside.com">hello@dakukupeterside.com</a>
                    </p>
                </div>
                <div class="md:w-1/3 p-4 text-center flex flex-col items-center">
                    <img src="/images/location-icon.png" alt="" class="h-[40px]">
                    <p class="text-lg font-semibold pt-4">Lekki, Lagos, Nigeria</p>
                </div>
            </div>
        </div>
    </section>

</Main>