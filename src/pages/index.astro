            <h3 class="text-2xl font-semibold text-brandred text-center uppercase mb-8">DAP through the lens</h3>
            <div class="video w-3/5 mx-auto h-[400px] flex justify-center items-center bg-[var(--brandred)] rounded-3xl">
                <a href="https://www.youtube.com/watch?v=1oHy0nbldEY" target="_blank" title="Watch video" class="h-[50px] transition hover:h-[65px] hover:transition duration-300">
                    <img src="images/video-icon.png" alt="" class="h-full">
                </a>
                
            </div>
        </div>
    </section>

	<script>
		// Hover function
		const heroImages = document.querySelectorAll('.hero-images  > div')
		heroImages.forEach((el, index, els) => {
			el.addEventListener('mouseenter', (e) => {
				els.forEach(d => {
					d.classList.remove('wideview')
					d.classList.add('slimview')
				})
				
				e.target.classList.add('duration-500')
				e.target.classList.add('transition-all')
				e.target.classList.add('wideview')
				e.target.classList.remove('slimview')
			})
			
			// el.addEventListener('mouseleave', (e) => {})
			
		})
	</script>
