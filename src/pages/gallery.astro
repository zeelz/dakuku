    </section>

    <script>
		// Hover function
		const galleryImages = document.querySelectorAll('.gallery-images')
		galleryImages.forEach((el, index, els) => {
			el.addEventListener('mouseenter', (e) => {
				els.forEach(d => {
					d.classList.remove('wideview')
					d.classList.add('slimview')
				})
				
				e.target.classList.add('duration-500')
				e.target.classList.add('transition-all')
				e.target.classList.add('wideview')
				e.target.classList.remove('slimview')
			})
			
			// el.addEventListener('mouseleave', (e) => {})
			
		})
	</script>

